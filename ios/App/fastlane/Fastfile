default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight"
  lane :release do
    # 1) App Store Connect API key (από secrets)
    api_key = app_store_connect_api_key(
      key_id:     ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id:  ENV['APP_STORE_CONNECT_API_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_API_KEY_CONTENT']
    )
	# Βάλε build number από το workflow ή fallback σε timestamp
    new_build = (ENV['BUILD_NUMBER'] || Time.now.strftime("%Y%m%d%H%M")).to_s
	
	increment_build_number(
		build_number: new_build,
		xcodeproj: "App.xcodeproj"
	  )
  
    # 2) Δημιουργία δικού μας keychain στο runner
    create_keychain(
      name: 'build.keychain',
      password: ENV['KEYCHAIN_PASSWORD'],
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    # 3) match (appstore) - εγκατάσταση στο build.keychain
    match(
      type: "appstore",
      readonly: true,
      api_key: api_key,
      keychain_name: "build.keychain",
      keychain_password: ENV['KEYCHAIN_PASSWORD']
    )

    # 4) Παίρνουμε τον χάρτη profile -> bundle id
    profiles_map = Actions.lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING]
    profile_name = profiles_map.values.first

    # 5) ΜΟΝΟ το target "App" σε Manual με συγκεκριμένο profile/identity
    update_code_signing_settings(
      path: "App.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV['APPLE_TEAM_ID'],
      targets: ["App"],
      profile_name: profile_name,
      code_sign_identity: "Apple Distribution"
    )

    # 6) Build/Archive - μην περνάς PROVISIONING_PROFILE_SPECIFIER στους Pods!
    gym(
      scheme: "App",
      workspace: "App.xcworkspace",
      configuration: "Release",
      clean: true,
      export_method: "app-store",
      # Εξαναγκάζουμε το codesign να χρησιμοποιήσει το νέο keychain
      xcargs: 'OTHER_CODE_SIGN_FLAGS="--keychain build.keychain"',
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: profiles_map
      },
	  buildlog_path: "~/Library/Logs/gym"

    )


    # 7) Upload στο TestFlight
    upload_to_testflight(
      api_key: api_key,                       # χρησιμοποίησε το ίδιο API key
	  app_identifier: ENV['APP_BUNDLE_ID'],   # ΒΑΛΕ εδώ το bundle id (π.χ. com.araksia.formypet)
	  app_platform: 'ios',
	  skip_waiting_for_build_processing: true
    )

    # (προαιρετικό) καθάρισε το keychain στο τέλος
    delete_keychain(name: 'build.keychain')
  end
end
