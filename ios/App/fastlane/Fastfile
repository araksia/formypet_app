default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight"
  lane :release do
    # 1) App Store Connect API key από secrets (BASE64 του .p8)
    api_key = app_store_connect_api_key(
      key_id:               ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id:            ENV['APP_STORE_CONNECT_API_ISSUER_ID'],
      key_content:          ENV['APP_STORE_CONNECT_API_KEY_CONTENT'], # <-- ΟΧΙ αρχείο
      is_key_content_base64: true                                     # <-- γιατί είναι base64
    )

    # (τα υπόλοιπα μένουν όπως είναι)
    new_build = (ENV['BUILD_NUMBER'] || Time.now.strftime("%Y%m%d%H%M")).to_s
    increment_build_number(build_number: new_build, xcodeproj: "App.xcodeproj")

    create_keychain(
      name: 'build.keychain',
      password: ENV['KEYCHAIN_PASSWORD'],
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    match(
      type: "appstore",
      readonly: true,
      api_key: api_key,
      keychain_name: "build.keychain",
      keychain_password: ENV['KEYCHAIN_PASSWORD']
    )

    profiles_map = Actions.lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING]
    profile_name = profiles_map.values.first

    update_code_signing_settings(
      path: "App.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV['APPLE_TEAM_ID'],
      targets: ["App"],
      profile_name: profile_name,
      code_sign_identity: "Apple Distribution"
    )

    gym(
      scheme: "App",
      workspace: "App.xcworkspace",
      configuration: "Release",
      clean: true,
      export_method: "app-store",
      xcargs: 'OTHER_CODE_SIGN_FLAGS="--keychain build.keychain"',
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: profiles_map
      },
      buildlog_path: "~/Library/Logs/gym"
    )

    upload_to_testflight(
      api_key: api_key,
      app_identifier: ENV['APP_BUNDLE_ID'],
      app_platform: 'ios',
      skip_waiting_for_build_processing: true
    )

    delete_keychain(name: 'build.keychain')
  end
end
