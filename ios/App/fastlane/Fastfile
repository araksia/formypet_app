default_platform(:ios)

platform :ios do
  lane :release do
    app_store_connect_api_key(
      key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_API_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_API_KEY_CONTENT'],
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      readonly: true,
      git_url: ENV["MATCH_GIT_URL"],
      keychain_name: "build.keychain",
      keychain_password: ENV["KEYCHAIN_PASSWORD"]
    )

    # Το Xcode θα υπογράψει αυτόματα τα Pods
    automatic_code_signing(
      path: "App.xcodeproj",
      use_automatic_signing: true
    )

    gym(
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      clean: true,
      # ΜΟΝΟ για το app bundle id – ΟΧΙ για Pods
      export_options: {
        provisioningProfiles: {
          ENV['APPLE_APP_ID'] => "match AppStore #{ENV['APPLE_APP_ID']}"
        }
      }
      # Μην περάσεις xcargs με CODE_SIGN_* ή PROVISIONING_PROFILE_SPECIFIER
    )

    upload_to_testflight(
      app_identifier: ENV['APPLE_APP_ID'],
      skip_waiting_for_build_processing: true
    )
  end
end
