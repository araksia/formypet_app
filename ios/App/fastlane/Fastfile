default_platform :ios

platform :ios do
  desc "Build & upload to TestFlight"
  lane :release do
    # 0) Keychain για CI
    create_keychain(
      name: "ci",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      password: ENV["KEYCHAIN_PASSWORD"]
    )

    # 1) App Store Connect API key (RAW .p8 content)
    api_key = app_store_connect_api_key(
      key_id:      ENV.fetch('APP_STORE_CONNECT_API_KEY_ID'),
      issuer_id:   ENV.fetch('APP_STORE_CONNECT_API_ISSUER_ID'),
      key_content: ENV.fetch('APP_STORE_CONNECT_API_KEY_CONTENT')
    )

    # 2) Match (git storage) - μόνο read
    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url:      ENV.fetch('MATCH_GIT_URL'),
      git_branch:   (ENV['MATCH_GIT_BRANCH'] || 'main'),
      app_identifier: ENV.fetch('APP_BUNDLE_ID'),
      team_id:        ENV.fetch('APPLE_TEAM_ID'),
      keychain_name:  "ci",
      keychain_password: ENV.fetch('MATCH_KEYCHAIN_PASSWORD'),
      api_key: api_key
    )

    # 3) Build number:
    # Προσπάθησε με agvtool, αλλιώς γράψε απευθείας στο Info.plist (fallback)
    begin
      increment_build_number(build_number: ENV['BUILD_NUMBER'])
    rescue => e
      UI.important("agvtool failed (Apple Generic Versioning not enabled). Fallback to Info.plist: #{e}")
      set_info_plist_value(
        path: "App/App/Info.plist",
        key: "CFBundleVersion",
        value: ENV['BUILD_NUMBER']
      )
      # (Προαιρετικό) marketing version:
      # set_info_plist_value(path: "App/App/Info.plist", key: "CFBundleShortVersionString", value: ENV['MARKETING_VERSION'] || "1.0.0")
    end

    # 4) Pin Xcode πριν από οτιδήποτε τρέξει xcodebuild
    xcode_select("/Applications/Xcode_16.2.app")

    # 5) Build/Archive
    #
    # ΣΗΜΑΝΤΙΚΟ:
    # - Μην περνάς PROVISIONING_PROFILE_SPECIFIER από εδώ (πάει και στα Pods).
    # - Άστο μόνο στα export_options (provisioningProfiles mapping).
    signing_xcargs = %W[
      CODE_SIGN_STYLE=Manual
      DEVELOPMENT_TEAM=#{ENV.fetch('APPLE_TEAM_ID')}
      CODE_SIGN_IDENTITY=Apple\\ Distribution
      ONLY_ACTIVE_ARCH=NO
      ENABLE_USER_SCRIPT_SANDBOXING=NO
      SDKROOT=iphoneos
    ].join(' ')

    gym(
      workspace: "App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      clean: true,
      # Μην ορίζεις -destination, άστο να διαλέξει generic/device μόνο του.
      # sdk: "iphoneos",  # (Προαιρετικό — το καλύπτει το SDKROOT στο xcargs)
      export_method: "app-store",
      output_directory: "build",
      output_name: "App-#{Time.now.strftime('%Y%m%d')}.ipa",
      include_symbols: true,
      include_bitcode: false,
      result_bundle: true,            # για να έχουμε .xcresult
      xcargs: signing_xcargs,
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "gr.formypet.app" => "match AppStore gr.formypet.app"
        }
      },
      silent: false
    )

    # 6) Safety check για push notifications entitlement
    sh <<~BASH
      set -e
      IPA=$(ls -t build/*.ipa | head -n1)
      echo "Inspecting $IPA"
      TMP=$(mktemp -d); unzip -q "$IPA" -d "$TMP"
      APP_PATH=$(find "$TMP/Payload" -name "*.app" -maxdepth 1 | head -n1)
      /usr/bin/codesign -d --entitlements :- "$APP_PATH" > entitlements.plist
      /usr/libexec/PlistBuddy -c "Print :aps-environment" entitlements.plist
    BASH

    # 7) Upload στο TestFlight
    pilot(
      api_key: api_key,
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end
